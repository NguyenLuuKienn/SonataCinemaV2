@model IEnumerable<SonataCinemaV2.Models.KhachHang>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Tên Khách Hàng</th>
            <th>Email</th>
            <th>Số Điện Thoại</th>
            <th>Trạng Thái</th>
            <th>Mật Khẩu</th>
            <th>Thao Tác
            <th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var khach in Model)
            {
                <tr>
                    <td>@khach.ID_KhachHang</td>
                    <td>@khach.TenKhachHang</td>
                    <td>@khach.Email</td>
                    <td>@khach.SoDienThoai</td>
                    <td>Active</td>
                    <td>@khach.MatKhau</td>
                    <td><button class="btn btn-danger">Xóa</button><button class="btn btn-warning">Sửa</button></td>
                </tr>
            }
        }
    </tbody>
</table>
