@model IEnumerable<SonataCinemaV2.ViewModel.PhimMoi>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Quản Lý Phim</h3>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#themPhimModal">
            <i class="bi bi-plus-circle"></i> Thêm Phim Mới
        </button>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Tên Phim</th>
                    <th>Thể Loại</th>
                    <th>Thời Lượng</th>
                    <th>Trạng Thái</th>
                    <th>Nổi Bật</th>
                    <th>Poster</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var phim in Model)
                {
                    <tr>

                        <td>@phim.IDPhim</td>
                        <td>@phim.TenPhim</td>
                        <td>@phim.TheLoai</td>
                        <td>@phim.ThoiLuong phút</td>
                        <td>
                            <span class="badge @(phim.TrangThai == "Đang Chiếu" ? "bg-success" :
                                               phim.TrangThai == "Sắp Chiếu" ? "bg-warning" : "bg-info")">
                                @phim.TrangThai
                            </span>
                        </td>
                        <td>
                            <span class="badge @(phim.NoiBat == 1 ? "bg-primary" : "bg-secondary")">
                                @(phim.NoiBat == 1 ? "Có" : "Không")
                            </span>
                        </td>
                        <td>
                            <img src="~/Content/img/@phim.TenPoster"
                                 alt="@phim.TenPhim"
                                 style="width: 50px; height: 70px; object-fit: cover;">
                        </td>
                        <td>
                            <button onclick="loadPhimEdit(@phim.IDPhim)" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#suaPhimModal">
                                <i class="bi bi-pencil"></i> Sửa
                            </button>

                            @using (Html.BeginForm("Delete", "Phim", FormMethod.Post, new { @class = "d-inline" }))
                            {
                                @Html.Hidden("id", phim.IDPhim)
                                <button type="submit" class="btn btn-danger btn-sm"
                                        onclick="return confirm('Bạn có chắc muốn xóa phim [@phim.TenPhim]?')">
                                    <i class="bi bi-trash"></i> Xóa
                                </button>
                            }
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>


<!-- Modal Thêm Phim -->
<div class="modal fade" id="themPhimModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Thêm Phim Mới</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="movieForm" action="@Url.Action("Create", "Phim")" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Tên Phim <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="TenPhim" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Thể Loại <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="TheLoai" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Thời Lượng (phút) <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" name="ThoiLuong" min="1" required>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Trạng Thái</label>
                            <select class="form-select" name="TrangThai">
                                <option value="Đang chiếu">Đang chiếu</option>
                                <option value="Sắp chiếu">Sắp chiếu</option>
                                <option value="Mới">Mới</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Nổi Bật</label>
                            <select class="form-select" name="NoiBat">
                                <option value="1">Có</option>
                                <option value="2">Không</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mô tả <span class="text-danger">*</span></label>
                        <textarea class="form-control" name="MoTa" rows="3" required></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Poster <span class="text-danger">*</span></label>
                            <input type="file" class="form-control" name="Poster" accept="image/*" required>
                            <small class="text-muted">Kích thước đề xuất: 300x450px</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Ảnh Thumbnail <span class="text-danger">*</span></label>
                            <input type="file" class="form-control" name="Banner" accept="image/*" required>
                            <small class="text-muted">Kích thước đề xuất: 185x278px</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Trailer URL</label>
                        <input type="text" class="form-control" name="Trailer" placeholder="Nhập URL trailer YouTube">
                        <small class="text-muted">
                            Hỗ trợ các định dạng:
                            <br>- https://www.youtube.com/watch?v=XXXX
                            <br>- https://youtu.be/XXXX
                        </small>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Lưu Phim
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Sửa Phim -->
<div class="modal fade" id="suaPhimModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sửa Thông Tin Phim</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editPhimForm" action="@Url.Action("Edit", "Phim")" method="post" enctype="multipart/form-data">
                    <input type="hidden" class="edit-ma-phim" name="IDPhim" />

                    <div class="form-group mb-3">
                        <label>Tên Phim</label>
                        <input type="text" class="form-control edit-ten-phim" name="TenPhim" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Thể Loại</label>
                        <input type="text" class="form-control edit-the-loai" name="TheLoai" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Thời Lượng (phút)</label>
                        <input type="number" class="form-control edit-thoi-luong" name="ThoiLuong" required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Mô Tả</label>
                        <textarea class="form-control edit-mo-ta" name="MoTa" rows="3" required></textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label>Trạng Thái</label>
                        <select class="form-select edit-trang-thai" name="TrangThai">
                            <option value="Đang chiếu">Đang chiếu</option>
                            <option value="Sắp chiếu">Sắp chiếu</option>
                            <option value="Ngừng chiếu">Ngừng chiếu</option>
                            <option value="Mới">Mới</option>
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label>Nổi Bật</label>
                        <select class="form-select edit-noi-bat" name="NoiBat">
                            <option value="1">Có</option>
                            <option value="0">Không</option>
                        </select>
                    </div>

                    <div class="form-group mb-3">
                        <label>Trailer URL</label>
                        <input type="text" class="form-control edit-trailer" name="Trailer"
                               placeholder="Nhập URL trailer YouTube">
                        <small class="text-muted">
                            Hỗ trợ các định dạng:
                            <br>- https://www.youtube.com/watch?v=XXXX
                            <br>- https://youtu.be/XXXX
                        </small>
                        <div class="preview-trailer mt-2" style="display:none">
                            <div class="alert alert-info">
                                <i class="bi bi-play-circle"></i> Trailer hiện tại:
                                <a href="#" class="current-trailer" target="_blank"></a>
                            </div>
                        </div>
                    </div>

                    <input type="hidden" name="TenPoster" />
                    <input type="hidden" name="TenBanner" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Poster</label>
                            <input type="file" class="form-control" name="Poster" accept="image/*">
                            <div class="preview-container mt-2" style="display:none">
                                <img class="img-thumbnail preview-poster" style="max-height:100px">
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Ảnh Thumbnail</label>
                            <input type="file" class="form-control" name="Banner" accept="image/*">
                            <div class="preview-container mt-2" style="display:none">
                                <img class="img-thumbnail preview-banner" style="max-height:100px">
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill"></i> @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Biến lưu trữ dữ liệu ban đầu
    let originalData = {};

    // Hàm kiểm tra thay đổi
    function hasFormChanged() {
        const currentData = {
            TenPhim: document.querySelector('.edit-ten-phim').value,
            TheLoai: document.querySelector('.edit-the-loai').value,
            ThoiLuong: document.querySelector('.edit-thoi-luong').value,
            MoTa: document.querySelector('.edit-mo-ta').value,
            TrangThai: document.querySelector('.edit-trang-thai').value,
            NoiBat: document.querySelector('.edit-noi-bat').value,
            Trailer: document.querySelector('.edit-trailer').value || ''
        };

        // Kiểm tra file ảnh mới
        const posterFile = document.querySelector('input[name="Poster"]').files.length > 0;
        const bannerFile = document.querySelector('input[name="Banner"]').files.length > 0;

        // So sánh dữ liệu
        const hasTextChanges = Object.keys(originalData).some(key =>
            originalData[key]?.toString() !== currentData[key]?.toString()
        );

        return hasTextChanges || posterFile || bannerFile;
    }

    // Hàm load thông tin phim để sửa
    function loadPhimEdit(maPhim) {
        console.log("Loading phim with ID:", maPhim);

        fetch(`@Url.Action("GetPhimById", "Phim")?id=${maPhim}`)
            .then(response => response.json())
            .then(data => {
                console.log("Received data:", data);

                if (data) {
                    // Lưu dữ liệu ban đầu
                    originalData = {
                        TenPhim: data.TenPhim,
                        TheLoai: data.TheLoai,
                        ThoiLuong: data.ThoiLuong,
                        MoTa: data.MoTa,
                        TrangThai: data.TrangThai,
                        NoiBat: data.NoiBat,
                        Trailer: data.Trailer || ''
                    };

                    // Điền dữ liệu vào form
                    document.querySelector('.edit-ma-phim').value = data.IDPhim;
                    document.querySelector('.edit-ten-phim').value = data.TenPhim;
                    document.querySelector('.edit-the-loai').value = data.TheLoai;
                    document.querySelector('.edit-thoi-luong').value = data.ThoiLuong;
                    document.querySelector('.edit-mo-ta').value = data.MoTa;
                    document.querySelector('.edit-trang-thai').value = data.TrangThai;
                    document.querySelector('.edit-noi-bat').value = data.NoiBat;
                    document.querySelector('input[name="TenPoster"]').value = data.Poster;
                    document.querySelector('input[name="TenBanner"]').value = data.Banner;

                    // Hiển thị ảnh preview
                    const previewPoster = document.querySelector('.preview-poster');
                    const previewBanner = document.querySelector('.preview-banner');

                    if (data.Poster) {
                        previewPoster.src = '/Content/img/' + data.Poster;
                        previewPoster.parentElement.style.display = 'block';
                    }

                    if (data.Banner) {
                        previewBanner.src = '/Content/img/' + data.Banner;
                        previewBanner.parentElement.style.display = 'block';
                    }

                    // Xử lý trailer
                    const trailerInput = document.querySelector('.edit-trailer');
                    const trailerPreview = document.querySelector('.preview-trailer');
                    const currentTrailer = document.querySelector('.current-trailer');

                    if (data.Trailer) {
                        trailerInput.value = data.Trailer;
                        currentTrailer.href = data.Trailer;
                        currentTrailer.textContent = data.Trailer;
                        trailerPreview.style.display = 'block';
                    } else {
                        trailerInput.value = '';
                        trailerPreview.style.display = 'none';
                    }

                    // Disable nút submit ban đầu
                    document.querySelector('#editPhimForm button[type="submit"]').disabled = true;

                    // Hiển thị modal
                    const modal = new bootstrap.Modal(document.getElementById('suaPhimModal'));
                    modal.show();
                } else {
                    alert('Không tìm thấy thông tin phim!');
                }
            })
            .catch(error => {
                console.error("Error:", error);
                alert('Có lỗi xảy ra khi tải thông tin phim!');
            });
    }

    // Gán function vào window
    window.loadPhimEdit = loadPhimEdit;

    // Preview ảnh khi chọn file mới
    $('input[type="file"]').change(function () {
        var input = this;
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var previewContainer = $(input).siblings('.preview-container');
                var previewImg = previewContainer.find('img');
                previewImg.attr('src', e.target.result);
                previewContainer.show();
            }
            reader.readAsDataURL(input.files[0]);
        }
        // Enable nút submit khi có thay đổi
        document.querySelector('#editPhimForm button[type="submit"]').disabled = !hasFormChanged();
    });

    // Theo dõi thay đổi của các trường input
    document.querySelectorAll('#editPhimForm input, #editPhimForm textarea, #editPhimForm select')
        .forEach(element => {
            element.addEventListener('input', function() {
                document.querySelector('#editPhimForm button[type="submit"]').disabled = !hasFormChanged();
            });
        });

    // Xử lý trailer preview
    document.querySelector('.edit-trailer')?.addEventListener('input', function () {
        const previewTrailer = document.querySelector('.preview-trailer');
        const currentTrailer = document.querySelector('.current-trailer');

        if (this.value) {
            currentTrailer.href = this.value;
            currentTrailer.textContent = this.value;
            previewTrailer.style.display = 'block';
        } else {
            previewTrailer.style.display = 'none';
        }
        // Enable nút submit khi có thay đổi
        document.querySelector('#editPhimForm button[type="submit"]').disabled = !hasFormChanged();
    });

    // Xử lý submit form
    $('#editPhimForm').submit(function(e) {
        e.preventDefault();

        if (!hasFormChanged()) {
            alert('Bạn chưa thay đổi thông tin nào!');
            return false;
        }

        var formData = new FormData(this);

        $.ajax({
            url: '@Url.Action("Edit", "Phim")',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function(response) {
                if (response.success) {
                    $('#suaPhimModal').modal('hide');
                    window.location.reload(); // Reload trang sau khi cập nhật thành công
                } else {
                    window.location.reload();
                }
            },
            error: function(xhr, status, error) {
                console.error('Error:', error);
                alert('Có lỗi xảy ra trong quá trình xử lý!');
            }
        });

        return false;
    });

    // Tự động ẩn thông báo
    setTimeout(function () {
        $('.alert').alert('close');
    }, 5000);
});
</script>
