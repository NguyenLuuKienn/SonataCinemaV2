
@{
    ViewBag.Title = "ChatIndex";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-robot me-2"></i>
                        Trợ lý ảo Sonata Cinema
                    </h5>
                </div>
                <div class="card-body">
                    <div id="chat-messages" class="mb-3" style="height: 400px; overflow-y: auto;">
                        <!-- Messages will appear here -->
                    </div>
                    <div class="input-group">
                        <input type="text" id="message-input" class="form-control"
                               placeholder="Nhập câu hỏi của bạn...">
                        <button class="btn btn-primary" onclick="sendMessage()">
                            <i class="fas fa-paper-plane"></i> Gửi
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .message {
        margin-bottom: 15px;
        padding: 10px 15px;
        border-radius: 10px;
        max-width: 80%;
    }

    .user-message {
        background-color: #e3f2fd;
        margin-left: auto;
    }

    .bot-message {
        background-color: #f5f5f5;
        margin-right: auto;
    }

    .message-time {
        font-size: 0.75rem;
        color: #666;
        margin-top: 5px;
    }

    .typing-indicator {
        padding: 10px;
        display: none;
    }
</style>


<script>
    $(document).ready(function() {
        // Add welcome message
        appendMessage('bot', 'Xin chào! Tôi là trợ lý ảo của Sonata Cinema. Tôi có thể giúp gì cho bạn?');
    });

    function sendMessage() {
        var message = $('#message-input').val().trim();
        if (!message) return;

        // Clear input
        $('#message-input').val('');

        // Add user message
        appendMessage('user', message);

        // Show typing indicator
        showTypingIndicator();

        // Send to server
        $.ajax({
            url: '@Url.Action("SendMessage", "Chat")',
            type: 'POST',
            data: { message: message },
            success: function(response) {
                hideTypingIndicator();
                if (response.success) {
                    appendMessage('bot', response.message);
                } else {
                    appendMessage('bot', 'Xin lỗi, có lỗi xảy ra. Vui lòng thử lại sau.');
                }
            },
            error: function() {
                hideTypingIndicator();
                appendMessage('bot', 'Xin lỗi, có lỗi xảy ra. Vui lòng thử lại sau.');
            }
        });
    }

    function appendMessage(sender, message) {
        var time = new Date().toLocaleTimeString();
        var messageClass = sender === 'user' ? 'user-message' : 'bot-message';
        var html = `
            <div class="message ${messageClass}">
                <div class="message-content">${message}</div>
                <div class="message-time">${time}</div>
            </div>
        `;
        $('#chat-messages').append(html);
        scrollToBottom();
    }

    function showTypingIndicator() {
        var html = `
            <div class="typing-indicator bot-message">
                <span>Đang trả lời...</span>
            </div>
        `;
        $('#chat-messages').append(html);
        $('.typing-indicator').show();
        scrollToBottom();
    }

    function hideTypingIndicator() {
        $('.typing-indicator').remove();
    }

    function scrollToBottom() {
        var container = $('#chat-messages');
        container.scrollTop(container[0].scrollHeight);
    }

    // Handle Enter key
    $('#message-input').keypress(function(e) {
        if (e.which == 13) {
            sendMessage();
        }
    });
</script>

