@{
    ViewBag.Title = "Đặt lại mật khẩu thành công";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<div class="confirmation-container">
    <div class="confirmation-content">
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>
        <h2>Đặt lại mật khẩu thành công!</h2>
        <p>Mật khẩu của bạn đã được thay đổi. Bạn có thể đăng nhập bằng mật khẩu mới.</p>
        <a href="@Url.Action("DangNhap", "Account")" class="btn-login">
            <i class="fas fa-sign-in-alt"></i> Đăng nhập ngay
        </a>
    </div>
</div>

<style>
    .confirmation-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
        background: #f8f9fa;
    }

    .confirmation-content {
        background: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
        text-align: center;
        max-width: 500px;
        width: 100%;
    }

    .success-icon {
        font-size: 60px;
        color: #28a745;
        margin-bottom: 20px;
    }

    .confirmation-content h2 {
        color: #333;
        margin-bottom: 15px;
    }

    .confirmation-content p {
        color: #666;
        margin-bottom: 30px;
    }

    .btn-login {
        display: inline-block;
        padding: 12px 25px;
        background: linear-gradient(to right, #ff7e5f, #feb47b);
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s;
    }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            color: white;
        }

        .btn-login i {
            margin-right: 8px;
        }
</style>