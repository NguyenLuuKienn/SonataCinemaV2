@model SonataCinemaV2.ViewModel.ForgotPasswordViewModel

<div class="forgot-password-page-container-partial">
    <div class="forgot-password-form-content-partial">
        <h2 class="text-center-partial">Quên mật khẩu</h2>
        <p class="text-muted text-center">Nhập email của bạn để nhận hướng dẫn đặt lại mật khẩu</p>

        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @id = "forgotPasswordForm" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="custom-form-group-partial">
                <label for="Email" class="custom-control-label-partial"></label>
                <input type="text" name="Email" class="custom-form-control-partial" placeholder="Nhập Email" />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="custom-form-group-partial text-center-partial">
                <button type="submit" class="custom-btn button-62">Gửi yêu cầu</button>
            </div>

            <div class="text-center-partial mt-3">
                <a href="#" id="btnBackToLogin" class="custom-link">Quay lại đăng nhập</a>
            </div>
        }
    </div>
</div>
<style>
    .forgot-password-page-container-partial {
        padding: 20px;
    }

    .forgot-password-form-content-partial {
        max-width: 400px;
        margin: 0 auto;
    }

    .text-center-partial {
        text-align: center;
    }

    .custom-form-group-partial {
        margin-bottom: 20px;
    }

    .custom-form-control-partial {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 8px;
        font-size: 16px;
    }

    .button-62 {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 8px;
        background: linear-gradient(to right, #ff7e5f, #feb47b);
        color: white;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

        .button-62:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .custom-link {
        color: #df9a2c;
        text-decoration: none;
    }

        .custom-link:hover {
            text-decoration: underline;
        }

    .mt-3 {
        margin-top: 15px;
    }
</style>
