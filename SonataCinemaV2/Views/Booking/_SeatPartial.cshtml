@model List<SonataCinemaV2.ViewModel.GheViewModel>

<div class="seat-layout">
    <div class="seat-container">
        @foreach (var ghe in Model.OrderBy(g => g.TenGhe))
        {
            var seatClass = ghe.TrangThai == "Đã đặt" ? "occupied" :
                           ghe.TrangThai == "Đang giữ" ? "holding" : "empty";

            <div class="seat @seatClass"
                 data-id="@ghe.IDGhe"
                 data-name="@ghe.TenGhe"
                 @(ghe.TrangThai != "Trống" ? "disabled" : "")>
                @ghe.TenGhe.Split('-')[1]
            </div>
        }
    </div>
</div>


<style>
    .seat-layout {
        display: flex;
        gap: 10px;
    }

    .row-label {
        font-weight: bold;
        font-size: 16px;
    }

    .seat-container {
        flex: 1;
    }
    .seat.holding {
        background-color: #f39c12;
        cursor: not-allowed;
    }
</style>