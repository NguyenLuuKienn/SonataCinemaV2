    <!-- Nội dung quản lý nhân viên -->
    <div class="employee-management d-none">
        <h2>Quản Lý Nhân Viên</h2>
        <form>
            <div class="form-group">
                <label for="tenNhanVien">Tên Nhân Viên</label>
                <input type="text" class="form-control" id="tenNhanVien" placeholder="Nhập tên nhân viên">
            </div>
            <div class="form-group">
                <label for="tenNhanVien">Email</label>
                <input type="text" class="form-control" id="tenNhanVien" placeholder="Nhập Email">
            </div>
            <div class="form-group">
                <label for="chucVu">Chức Vụ</label>
                <select class="form-select" id="status">
                    <option value="Nhân Viên">Nhân Viên</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <div class="form-group">
                <label for="matKhau">Mật Khẩu</label>
                <input type="password" class="form-control" id="matKhau" placeholder="Nhập mật khẩu">
            </div>
            <button type="submit" class="btn btn-primary">Thêm Nhân Viên</button>
        </form>

