    </div>


    <!-- Nội dung quản lý phim -->
    <div class="movie-management d-none">
        <h2>Quản Lý Phim</h2>

        <!-- Form nhập thông tin phim -->
        <form id="movieForm" class="mb-4">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="movieName" class="form-label" style="margin-left: -10px;">Tên Phim</label>
                    <input type="text" class="form-control" id="movieName" placeholder="Nhập tên phim" style="margin-left: -10px;">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="genre" class="form-label">Thể Loại</label>
                    <select class="form-select" id="status">
                        <option value="Đang chiếu">Hành Động</option>
                        <option value="Sắp chiếu">Tình Cảm</option>
                        <option value="Đã chiếu">Lịch Sử</option>
                    </select>
                </div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Mô tả</label>
                <textarea class="form-control" id="description" rows="3" placeholder="Mô tả nội dung phim"></textarea>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="duration" class="form-label" style="margin-left: -10px;">Thời Lượng (phút)</label>
                    <input type="number" class="form-control" id="duration" placeholder="Nhập thời lượng phim" style="margin-left: -10px;">
                </div>
                <div class="col-md-4 mb-3">
                    <label for="status" class="form-label">Trạng Thái</label>
                    <select class="form-select" id="status">
                        <option value="Đang chiếu">Đang chiếu</option>
                        <option value="Sắp chiếu">Sắp chiếu</option>
                        <option value="Đã chiếu">Mới</option>
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label for="featured" class="form-label">Nổi Bật</label>
                    <select class="form-select" id="featured">
                        <option value="Có">Có</option>
                        <option value="Không">Không</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label for="duration" class="form-label" style="margin-left: -10px;">Ảnh</label>

                    <input type="file" class="form-control" id="duration" placeholder="Nhập thời lượng phim" style="margin-left: -10px;">
                </div>
            </div>



            <button type="submit" class="btn btn-primary">Thêm Phim</button>
        </form>

        <!-- Danh sách phim -->
        <h3>Danh Sách Phim</h3>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Tên Phim</th>
                    <th>Thể Loại</th>
                    <th>Thời Lượng</th>
                    <th>Trạng Thái</th>
                    <th>Nổi Bật</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Phim A</td>
                    <td>Hành Động</td>
                    <td>120 phút</td>
                    <td>Đang chiếu</td>
                    <td>Có</td>
                    <td>
                        <button class="btn btn-warning btn-sm">Sửa</button>
                        <button class="btn btn-danger btn-sm">Xóa</button>
                    </td>
                </tr>
                <tr>
